<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="简单示例（showAtLocation显示窗体）"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PopshowAtLocation"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aa000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="另一示例（showAsDropDown显示窗体）"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PopupShowAsDropDown"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aa000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="提高：为菜单添加阴影 "
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PopDropDownBg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aa000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="为PopupWindow添加动画 "
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PopupAnim"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aa000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="自定义输入框下拉"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PopSelectNum"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aa000000"/>


</LinearLayout>
